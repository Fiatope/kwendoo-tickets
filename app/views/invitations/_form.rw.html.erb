<div class="row form">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @invitation do |f| %>

		<%= f.label :"Amazina yawe", class: 'strong-label' %>
		<%= f.text_field :name, placeholder: "Amazina yawe niko azakugaragarira abaterankunga", class:"wrap"%>

		<%= f.label :Email, class: 'strong-label' %>
		<%= f.text_field :email, placeholder: " "%>

                <%= f.label :"Linki y'agaseke", class: 'strong-label' %>
                <%= f.text_field :link, placeholder: "Linki yoherezwa mu butumwa"%>

                <%= f.label :"Abakira ubutumwa", class: 'strong-label' %>
                <%= f.text_field :recipients, placeholder: "Email yabantu utumira kugirango bagutere inkunga itandukanywa na kitso"%>

		<%= f.label :Impamvu, class: 'strong-label' %>
                <%= f.text_field :subject, placeholder: "Garagaza impamvu"%>

		<%= f.label :"Ubutumwa", class: 'strong-label'  %> 
		<%= f.text_area :message, placeholder: "Garagaza neza ubutumwa kubaterankunga. wongeremo na linki yagaseke" %>

		<%= f.hidden_field :type, value:nil %>

		<%= f.submit :Ohereza, class: 'btn btn-medium-green btn-block' %>


		<% end %>

	</div>
</div>
