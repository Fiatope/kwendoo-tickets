<%= content_for :title, t('.title') %>
<div class="navbar-wagon">
	<!-- Logo -->
	<%= link_to root_path, class: "navbar-wagon-brand" do %>
	<%= image_tag "ticketshd.png" %>
	<% end %>

<div class="navbar-wagon-right hidden-xs hidden-sm">
<div id="b" style="font-size:13px; color:#da552f;">
&nbsp;&nbsp;&nbsp;
<%= link_to_unless_current image_tag("france.png", alt: "france", height: 30, width: 30), locale: "fr" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to_unless_current image_tag("uk.png", alt: "English", height: 30, width: 30), locale: "en" %>

	<!-- Right Navigation -->


</div>

		<!-- Different navigation if login or not -->
		<% if user_signed_in? %>
		<%= link_to t('.how_it_work'), main_app.how_it_works_path, class: "navbar-wagon-item navbar-wagon-link" %>

		<%= link_to t('.public_c'), main_app.discover_path, class: "navbar-wagon-item navbar-wagon-link" %>

		<!--%= link_to t('.blog'), main_app.blogo_root_path, class: "navbar-wagon-item navbar-wagon-link" %-->

		<div class="navbar-wagon-item">
			<div class="dropdown">
				<!-- <span class="dropdown-toggle" data-toggle="dropdown"><%= t('.profile')%></span> -->
				<%= link_to main_app.edit_user_path(current_user), class: 'dropdown-toggle user-profile navbar-wagon-link', data: { toggle: 'dropdown' } do %>
                <% unless current_user.uploaded_image.url.nil? %>
                  <%= image_tag current_user.uploaded_image.url, size: "18x18", class: 'profile-picture', alt: '' %>
                <% else %>
                  <%= image_tag current_user.gravatar_url, size: "18x18", class: 'profile-picture', alt: '' %>
                <% end %>
				<%= current_user.first_name %>
				<% end %>
				<ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
					<li>
						<%= link_to main_app.edit_user_path(current_user) do %>
						<i class="fa fa-user"></i> <%= t ".profile", default: "Mon Profil" %>
						<% end %>
					</li>
					<% if current_user.projects.any? %>
					<li>
						<%= link_to main_app.user_projects_path(current_user) do %>
						<i class="fa fa-check"></i> <%= t('.my_projects') %>
						<% end %> 
					</li>
					<% end %>
					<% if current_user.contributions.any? %>
					<li>
						<%= link_to main_app.user_contributions_path(current_user) do %>
		<i class="fa fa-check"></i>  <%= t ".my_contributions", default: "Mes contributions" %>
						<% end %>	
					</li>
					<% end %>
					<li>
						<%= link_to main_app.credits_user_path(current_user) do %>
						<i class="fa fa-money"></i>  <%= t ".credits", default: "Mes crédits" %>
						<% end %>
					</li>
					<li>
						<%= link_to main_app.payments_user_path(current_user) do %>
						<i class="fa fa-credit-card"></i>  <%= t ".bank_details", default: "Coordonnées bancaires" %>
						<% end %>
					</li>
					<li>
						<%= link_to main_app.settings_user_path(current_user) do %>
						<i class="fa fa-cog"></i>  <%= t ".settings", default: "Mes configurations" %>
						<% end %>
					</li>
				</ul>
			</div>
		</div>



		<%= link_to t('.sign_out'), main_app.destroy_user_session_url(base_domain_with_https_url_params), method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>
		<!-- Notification -->

		<!-- Profile picture and dropdown -->


		<% else %>
		<%= link_to t('.how_it_work'), main_app.how_it_works_path, class: "navbar-wagon-item navbar-wagon-link" %>

		<%= link_to t('.public_c'), main_app.discover_path, class: "navbar-wagon-item navbar-wagon-link" %>

		<!--%= link_to t('.blog'), main_app.blogo_root_path, class: "navbar-wagon-item navbar-wagon-link" %-->

		<!-- Login text link -->
		<%= link_to link_to t('.sign-in'), main_app.new_user_session_url(base_domain_with_https_url_params), class: "navbar-wagon-item navbar-wagon-link" %>

		<%= link_to t('.sign-up'), main_app.new_user_registration_url(base_domain_with_https_url_params), class: "navbar-wagon-item navbar-wagon-link" %>

		<% end %>

		<!-- Button (call-to-action) -->
		<%= link_to t('.start_cagnotte'), main_app.new_project_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
	</div>

	<!-- Dropdown list appearing on mobile only -->

	<div class="navbar-wagon-item hidden-md hidden-lg">
		<div class="dropdown">
			<i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
			<ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
				<li><%= link_to t('.how_it_work'), main_app.how_it_works_path %></li>
				<li><%= link_to t('public_c'), main_app.discover_path %></li>
				<li><!--%= link_to t('.blog'), main_app.blogo_root_path, class: "navbar-wagon-item navbar-wagon-link" %--></li>
				<% if user_signed_in? %>
				<li><%= link_to t('.profile'), main_app.edit_user_path(current_user) %></li>
				<li><%= link_to t('.sign_out'), main_app.destroy_user_session_url(base_domain_with_https_url_params), method: :delete %></li>
				<% else %>
				<li><%= link_to t(".sign_in", default: "Connexion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
				<li><%= link_to t(".sign_up", default: "Inscription"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>

