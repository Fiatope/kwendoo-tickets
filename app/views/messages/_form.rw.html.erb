<div class="row form">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @message do |f| %>

		<%= f.label :Name, class: 'strong-label' %>
		<%= f.text_field :name, placeholder: "Shyiramo amazina yanyu", class:"wrap"%>

		<%= f.label :email, class: 'strong-label' %>
		<%= f.text_field :email, placeholder: "Shyiramo emmeli yanyu"%>

		<%= f.label :subject, class: 'strong-label' %> 
    <%= f.text_field :subject, placeholder: "Impamvu"%> 

		<%= f.label :message, class: 'strong-label'  %> 
		<%= f.text_area :message, placeholder: "Andika ubutumwa bwawe" %>

		<%= f.hidden_field :type, value:nil %>

		<%= f.submit :Send, class: 'btn btn-medium-green btn-block' %>

		<% end %>

	</div> 
</div>
