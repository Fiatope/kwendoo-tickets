      = f.input :name
    .small-1.columns
      = link_to_remove_association "X", f, class: "delete"
  .row
    br
    h4 = t('projects.new.tickets_available')
    = f.simple_fields_for :rewards do |ff|
      = render 'reward_fields', f: ff
    div
      = link_to_add_association t('projects.new.add_a_ticket'), f, :rewards, style: "display:block;padding:1rem;text-align:center;border:1px solid silver;width:100%;margin:1rem 0;border-radius:3px;"


